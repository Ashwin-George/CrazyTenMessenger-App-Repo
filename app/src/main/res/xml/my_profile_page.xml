<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="My Profile">
    <EditTextPreference
        android:title="@string/my_profile_username_label"
        android:defaultValue="@string/my_profile_username_default"
        android:selectAllOnFocus="true"
        android:key="@string/my_profile_username_key"
        android:inputType="text"
        />
    <EditTextPreference
        android:title="@string/my_profile_about_label"
        android:defaultValue="@string/my_profile_about_default"
        android:key="@string/my_profile_about_key"
        android:selectAllOnFocus="true"
        android:inputType="text"
        />

</PreferenceScreen>
